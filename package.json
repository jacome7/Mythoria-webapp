{
  "name": "mythoria-webapp",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx -r dotenv/config ./src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx -r dotenv/config ./src/db/reset.ts",
    "db:setup": "npm run db:reset && npm run db:push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx -r dotenv/config ./src/db/seed.ts",
    "deploy:staging": "gcloud builds submit --config cloudbuild-staging.yaml",
    "deploy:production": "gcloud builds submit --config cloudbuild.yaml",
    "deploy:script": "bash scripts/deploy.sh",
    "docs:serve": "npx serve docs/",
    "backup:db": "bash scripts/backup-db.sh",
    "setup:env": "bash scripts/setup-env.sh",
    "health:check": "curl -f http://localhost:3000/api/health || curl -f https://mythoria.pt/api/health"
  },
  "dependencies": {
    "@clerk/localizations": "^3.16.3",
    "@clerk/nextjs": "^6.20.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@types/pg": "^8.15.2",
    "@types/uuid": "^10.0.0",
    "daisyui": "^5.0.38",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "next": "15.3.2",
    "next-intl": "^4.1.0",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-type-animation": "^3.2.0",
    "svix": "^1.66.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
