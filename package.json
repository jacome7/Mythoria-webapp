{
  "name": "mythoria-webapp",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.cjs,.mjs,.ts,.tsx --fix",
    "typecheck": "rimraf .next/types && tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "logs": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/get-cloud-run-logs.ps1",
    "i18n:prune:pt-PT:common": "tsx scripts/prune-unused-keys.ts pt-PT common.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx -r dotenv/config ./src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx -r dotenv/config ./src/db/reset.ts",
    "db:setup": "npm run db:reset && npm run db:push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx -r dotenv/config ./src/db/seed.ts",
    "deploy:production": "gcloud beta builds submit --config cloudbuild.yaml",
    "deploy": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:fast": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/deploy.ps1 -Fast",
    "docs:serve": "npx serve docs/",
    "i18n:parity": "tsx scripts/check-locale-parity.ts",
    "i18n:keys": "tsx scripts/generate-translation-keys.ts",
    "test": "cross-env NODE_OPTIONS=--no-deprecation jest",
    "test:e2e": "playwright test",
    "test:e2e:anon": "cross-env SKIP_AUTH_SETUP=1 playwright test tests/playwright/missing-translations_anonymous.spec.ts --workers=1",
    "check:env": "tsx ./scripts/check-env-parity.ts"
  },
  "sideEffects": false,
  "dependencies": {
    "@clerk/localizations": "^3.24.2",
    "@clerk/nextjs": "^6.31.9",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@google-cloud/pubsub": "^5.2.0",
    "@google-cloud/storage": "^7.17.0",
    "@lexical/history": "^0.35.0",
    "@lexical/html": "^0.35.0",
    "@lexical/react": "^0.35.0",
    "@lexical/rich-text": "^0.35.0",
    "@revolut/checkout": "^1.1.23",
    "@tailwindcss/typography": "^0.5.16",
    "daisyui": "^5.1.8",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "lexical": "^0.35.0",
    "mermaid": "^11.11.0",
    "next": "^15.5.2",
    "next-intl": "^4.3.6",
    "next-mdx-remote": "^5.0.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-easy-crop": "^5.5.0",
    "react-icons": "^5.5.0",
    "react-type-animation": "^3.2.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "svix": "^1.76.1",
    "tsx": "^4.20.5",
    "uuid": "^13.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lingual/i18n-check": "^0.8.7",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/pg": "^8.15.5",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "js-yaml": "^4.1.0",
    "knip": "^5.63.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "rimraf": "^6.0.1",
    "@jridgewell/sourcemap-codec": "^1.5.4",
    "glob": "^11.0.2",
    "esbuild": "^0.25.9"
  }
}