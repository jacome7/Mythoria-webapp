# Environment Configuration Template
# Copy this file to .env.local for local development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mythoria_db_dev
DB_USER=postgres
DB_PASSWORD=your_local_password

# Clerk Authentication (Development Keys)
# Get these from https://dashboard.clerk.dev/
CLERK_SECRET_KEY=sk_test_your_development_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_development_publishable_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
CLERK_WEBHOOK_SIGNING_SECRET=whsec_your_webhook_signing_secret_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-local-development-secret-key

# Google Cloud Configuration (for local testing)
GOOGLE_CLOUD_PROJECT_ID=oceanic-beach-460916-n5

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Show "Coming Soon" page (set to 'true' to test the soon page locally)
NEXT_PUBLIC_SHOW_SOON_PAGE=true